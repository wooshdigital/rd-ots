# Server Configuration
PORT=3000
NODE_ENV=development
# HOST defaults to 0.0.0.0 (all interfaces) - required for WSL bridged networking
# To restrict to localhost only, set: HOST=localhost
HOST=0.0.0.0

# n8n Webhook URLs (these will call your n8n workflows)
N8N_BASE_URL=https://n8n.roochedigital.com

# Unified ERPNext Service (recommended - handles all ERPNext operations)
N8N_USE_ERPNEXT_SERVICE=true
N8N_WEBHOOK_ERPNEXT_SERVICE=/webhook/erpnext-service

# Email Notification Service
N8N_WEBHOOK_SEND_NOTIFICATION=/webhook/send-notification

# Legacy webhooks (for backward compatibility)
N8N_WEBHOOK_PROCESS_REQUEST=/webhook/process-ot-request
N8N_WEBHOOK_APPROVAL=/webhook/5a661dcd-b7dc-421a-a6cf-252729c4e999
N8N_WEBHOOK_VALIDATE_EMPLOYEE=/webhook/validate-employee

# Database Configuration
# Options: 'supabase' or 'postgresql'
DB_TYPE=supabase

# Supabase Configuration (if DB_TYPE=supabase)
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_anon_key

# PostgreSQL Configuration (if DB_TYPE=postgresql)
DATABASE_URL=postgresql://username:password@localhost:5432/rd_ots

# CORS Configuration
# Single origin:
CORS_ORIGIN=http://localhost:5173
# Multiple origins (comma-separated, no spaces):
# CORS_ORIGIN=http://localhost:5173,http://192.168.1.8:5173,https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
